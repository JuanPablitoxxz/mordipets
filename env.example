# Configuración de la base de datos
# Railway te dará esta URL automáticamente cuando crees la base de datos PostgreSQL
DATABASE_URL=postgresql://username:password@host:port/database

# Configuración del servidor
NODE_ENV=production
PORT=3000

# Configuración de Email para Railway
# IMPORTANTE: Configura estas variables en Railway Dashboard
EMAIL_USER=tu-email@gmail.com
EMAIL_PASS=tu-app-password-de-gmail
FRONTEND_URL=https://tu-app.railway.app

# Variables adicionales para Railway
RAILWAY_STATIC_URL=https://tu-app.railway.app

# PSE Payment Configuration (PayU)
PAYU_API_KEY=tu-api-key
PAYU_MERCHANT_ID=tu-merchant-id
PAYU_ACCOUNT_ID=tu-account-id
PAYU_BASE_URL=https://api.payulatam.com/payments-api/4.0/service.cgi
PAYU_TEST_MODE=true